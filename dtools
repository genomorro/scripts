#!/bin/bash
# Edgar Uriel Dom√≠nguez Espinoza
# edgar_uriel84@NOSPAM.gmx.com

[[ -z "$DISPLAY" ]] && exit 1

if [[ -f "$HOME/.dwm/dmenurc" ]]; then
    . "$HOME/.dwm/dmenurc"
else
    DMENU='dmenu -i'
fi

CHOICE=$(echo -e "1: Screenshot\n2: Screenshot Window\n3: Take Picture\n4: Show Camera" | $DMENU | cut -d ':' -f 1)

[[ -z "$CHOICE" ]] && exit 1

case "$CHOICE" in
    1) screenshot -m root &	;;
    2) screenshot -m window &	;;
    3) webcam -r 2 ;;
    4) webcam -r 1;;
    5) ;;
    6) ;;
    7) ;;
    8) ;;
    9) ;;
    0) ;;
    *) exit 1                 ;;
esac
